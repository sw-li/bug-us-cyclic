<h1>MY SHELF</h1>
<p>this is {{username}}'s shelf</p>
 <video src=""><source src="https://www.youtube.com/watch?v=L_LUpnjgPso" type="video"></video>

 <div class="container d-flex flex-row p-3"> 
{{#each result.books}}
    <div class="card p-3 m-2" style="width: 18rem;">
        <img src="{{image}}" class="card-img-top" alt="book cover">
        <div class="card-body">
            <h3 class="card-title">{{title}}</h3>
            <label for="">Author(s): <h4 class="card-subtitle">
                {{#each authors}}
                    {{this}} ,
                {{/each}}
            </h4></label>
            <label for="">Genre:<h4 class="card-subtitle">{{genre}}</h4></label>
            <label for="">Rating: <h5 class="card-subtitle">{{rating}}</h5></label> 
            <h5 class="card-subtitle">{{prices}} </h5>
            {{!-- <p class="card-text">{{description}}</p> --}}
            <a href="/books/{{_id}}" class="btn btn-primary">See book details</a>
            <a href="#" class="btn btn-success">Add to my shelf</a>
        </div>
    </div>
{{/each}}
</div>